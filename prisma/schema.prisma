generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Producto {
  id            Int      @id @default(autoincrement())
  nombre        String   @unique
  descripcion   String?
  precio        Float
  stock         Int      @default(0)
  imagenUrl      String? 
  creadoEn      DateTime @default(now())
  actualizadoEn DateTime @updatedAt
  ofertaDiaria Boolean    @default(false)
  vencimiento  DateTime?  // nullable
}
model Purchase {
  id            Int      @id @default(autoincrement())
  numeroPedido  Int
  cliente       String
  direccion     String
  total         Float
  items         Json
  date          DateTime @default(now())
}

