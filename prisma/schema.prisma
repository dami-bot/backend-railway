generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")

}

model Product {
  id        Int      @id @default(autoincrement())
  name      String
  stock     Int
  price     Decimal  @db.Decimal(10, 2)
  imageUrl  String   @default("")
  createdAt DateTime @default(now())
}

model Purchase {
  id    Int      @id @default(autoincrement())
  date  DateTime @default(now())
  items Json
}
