generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Producto {
  id            Int      @id @default(autoincrement())
  nombre        String   @unique
  descripcion   String?
  precio        Float
  stock         Int      @default(0)
  imagenUrl      String? 
  creadoEn      DateTime @default(now())
  actualizadoEn DateTime @updatedAt
  ofertaDiaria Boolean    @default(false)
  vencimiento  DateTime?  // nullable
  categoria     String   @default("Almac√©n")
}

model MarketplaceItem {
  id               Int      @id @default(autoincrement())
  nombre           String
  descripcion      String?
  precioBase       Float    // Lo que el vendedor pide
  precioFinal      Float    // Precio con el 10% ya sumado
  comisionMonto    Float    // El valor del 10% calculado
  stock            Int      @default(1)
  imagen           String
  categoria        String   // Ropa, Celulares, etc.
  vendedorNombre   String
  vendedorTelefono String   // Formato: 54911...
  estado           String   @default("disponible") // disponible / vendido
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}
model Purchase {
  id            Int      @id @default(autoincrement())
  numeroPedido  Int
  cliente       String
  direccion     String
  total         Float
  items         Json
  date          DateTime @default(now())
}

